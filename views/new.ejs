<% include partials/header %>
<div class="ui main container piled segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form"action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" required >
        </div>
        
        <div class="field ui left icon">
            <label>Image URL</label>
            <input type="url" name="blog[image]" required >
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required></textarea>
        </div>
        <br>
        <div class="large ui buttons">
            <button class="ui violet basic button">Submit</button>
        </div>
    </form> 
</div>
<% include partials/footer %>